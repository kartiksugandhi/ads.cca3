#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int commonChild(const char* s1, const char* s2) {
    int n = strlen(s1);
    int m = strlen(s2);
    // allocate (n+1) x (m+1) DP table
    int **dp = malloc((n+1) * sizeof(int*));
    for (int i = 0; i <= n; i++) {
        dp[i] = malloc((m+1) * sizeof(int));
        for (int j = 0; j <= m; j++) {
            dp[i][j] = 0;
        }
    }
    // fill table
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= m; j++) {
            if (s1[i-1] == s2[j-1]) {
                dp[i][j] = dp[i-1][j-1] + 1;
            } else {
                dp[i][j] = dp[i-1][j] > dp[i][j-1] ? dp[i-1][j] : dp[i][j-1];
            }
        }
    }
    int result = dp[n][m];
    // free memory
    for (int i = 0; i <= n; i++) {
        free(dp[i]);
    }
    free(dp);
    return result;
}

int main(void) {
    char s1[5001], s2[5001];
    if (scanf("%5000s", s1) != 1) return 1;
    if (scanf("%5000s", s2) != 1) return 1;
    int res = commonChild(s1, s2);
    printf("%d\n", res);
    return 0;
}
